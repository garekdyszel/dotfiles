// -*- c -*-

xkb_keymap {
	xkb_keycodes  { include "evdev+aliases(qwerty)"	};
	xkb_types     { include "complete"	};
	xkb_compat    { include "complete"	};
	xkb_symbols   { include "us+pc_modifiers(pc105)+capslock(ctrl_modifier)+unused_keys(not_existing)+numpad(no_numlock)+accents(accents)+chips(chips_modifiers)"	};
	xkb_geometry  { include "pc(pc105)"	};
};

// To make the numpad use a dot always where the dot is marked (and never a comma), use kpdl(dot).
// To activate capslock by pressing both shift keys, use shift(both_capslock).

